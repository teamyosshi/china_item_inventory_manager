<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Inventory arrival date</th>
      <th>Purchase price</th>
      <th>Trager name</th>
      <th>Stock</th>
      <th>Alert border line</th>
      <th>Item number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.inventory_arrival_date %></td>
        <td><%= stock.purchase_price %></td>
        <td><%= stock.trager_name %></td>
        <td><%= stock.stock %></td>
        <td><%= stock.alert_border_line %></td>
        <td><%= stock.item_number %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

