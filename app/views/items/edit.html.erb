<h1>商品データ更新</h1>
<div class="col-md-6 col-md-offset-4">
<%= form_for(@item, url:{controller:'items', action:'create'}) do |form| %>
<div class="field">
  <%= form.label :part_number,"製品番号" %>
  <%= form.text_field :part_number %>
</div>
<div class="field">
  <%= form.label :item_title,"商品名" %>
  <%= form.text_field :item_title, :size=>"50" %>
  </div>
<div class="field">
  <%= form.label :simulate_price,"想定価格" %>
  <%= form.number_field :simulate_price %>
</div>
<b>出品サイト</b>
<table>
<tr style="height:30px;">
<td>
<%= form.check_box :yahoo %>
<B>Yahoo</B>
</td>
<td>
<%= form.check_box :amazon %>
<B>Amazon</B>
</td>
<td>
<%= form.check_box :mercari %>
<b>メルカリ</b>
</td>
<td>
<%= form.check_box :rakuma %>
<b>ラクマ</b>
</td></tr>
<tr>
  <td >
  <%= form.check_box :rakuten %>
  <b>楽天</b>
  </td>
<td colspan="2">
  <%= form.check_box :yahooshoping %>
  <b>ヤフーショッピング</b>
</td></tr>
</table>
  <p><br>
    <%= form.submit "更新する", :class=> 'btn btn-primary', :size=>'10px' %>
    <A HREF="javascript:history.back()" class='btn btn-primary'>キャンセル</A>
  </p>
<p>
</p>
<% end %>
</div>
